<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Transporters</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Lookups</a>
      </li>
      <li class="active">
        <strong>Transporters</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'New Transporter', new_transporter_path, :class => "btn btn-primary"%>
    </div>
  </div>
</div>

<div class="row">
  <div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
      <div class="ibox-content">

        <table class="table table-striped cats-datatable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Code</th>
              <th>Ownership</th>
              <th>Total number of vehicles</th>
              <th>Lift capacity</th>
              <th>Contact Person</th>
              <th>Phone</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @transporters.each do |transporter| %>
            <tr>
              <td><%= transporter.name
                %></td>
              <td><%= transporter.code
                %></td>
              <td><%= transporter.ownership
                %></td>
              <td><%= transporter.vehicle_count
                %></td>
              <td><%= transporter.lift_capacity
                %></td>
              <td><%= transporter.contact
                %></td>
              <td><%= transporter.contact_phone
                %></td>
              <td>
                <%= link_to 'Edit', edit_transporter_path(transporter) %>
                &middot;
                <%= link_to 'Delete', transporter, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
