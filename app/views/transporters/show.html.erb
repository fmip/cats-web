<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Transporter Summary</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Transport</a>
      </li>
      <li>
        <%= link_to 'Transporters', transporters_path %>
      </li>
      <li class="active">
        <strong><%= @transporter.name %></strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'Back', transporters_path,  :class => "btn btn-default"%>
      <%= link_to 'Edit', edit_transporter_path(@transporter),  :class => "btn btn-default"%>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row m-b-lg m-t-lg">
    <div class="col-md-6">

      <div class="">
        <div>
          <h2 class="no-margins">
            <%= @transporter.name %>
          </h2>
          <h4>Code:
            <%= @transporter.code %></h4>
          <p>Registered since:
            <%= time_ago_in_words(@transporter.created_at) %></p>
          <small>
            <%= @transporter.remark %>
          </small>
        </div>
      </div>

    </div>

    <div class="col-md-3">
      <table class="table small m-b-xs">
        <tbody>
          <tr>
            <td>
              <strong><%= @transporter.vehicle_count %></strong>
              Vehicles (trucks)
            </td>
            <td>
              <strong><%= @transporter.employees %></strong>
              Employees
            </td>
          </tr>
          <tr>
            <td>
              <strong>61</strong>
              <a href="#">Pending delivery notes</a>
            </td>
            <td>
              <strong>2</strong>
              <a href="#">Pending invoices</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <small>Total amount of commodity moved</small>
      <h2 class="no-margins">26,480.7 mt</h2>
      <div id="sparkline1"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <div class="ibox">
        <div class="ibox-content">
          <h3>Contact Information</h3>
          <ul class="list-unstyled file-list">
            <li>
              <i class="fa fa-female"></i>
              Contact person:
              <%= @transporter.contact %>
            </li>
            <li>
              <i class="fa fa-phone"></i>
              Phone#:
              <%= @transporter.contact_phone %>
            </li>

          </ul>
        </div>
      </div>

      <div class="ibox">
        <div class="ibox-content">
          <h3>Comment</h3>

          <p class="small">
            Add comment for this transporter. Please be as specific as possible
          </p>

          <div class="form-group">
            <label>Comment</label>
            <textarea class="form-control" placeholder="Your comment" rows="3"></textarea>
          </div>
          <button class="btn btn-primary btn-block">Add Comment</button>

        </div>
      </div>

    </div>

    <div class="col-lg-9">

      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Address and Contact Information
          </h5>
          <div class="ibox-tools">
            <%= link_to edit_transporter_path(@transporter), class: "btn btn-xs" do %>
            <i class="fa fa-plus-square"></i>
            Address
            <% end %>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">

          <table class="table table-hover">
            <thead>
              <tr>
                <th>Region</th>
                <th>Zone/Subcity</th>
                <th>Woreda</th>
                <th>Kebele</th>
                <th>House#</th>
                <th>Phone</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Addis Ababa</td>
                <td>Gulele</td>
                <td>03</td>
                <td>N/A</td>
                <td>New</td>
                <td>0922752433</td>
                <td>info@fetnoderashtrans.com</td>
              </tr>
              <tr>
                <td>Oromia</td>
                <td>Adama</td>
                <td>Adama-01</td>
                <td>01</td>
                <td>766</td>
                <td>0922752433</td>
                <td>adama@fetnoderashtrans.com</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Outstanding invoices & payment requests
          </h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content" style="display: block;">
          <h2>No address information avaialble. Click here to add.</h2>
        </div>
      </div>

    </div>

  </div>

</div>
