<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Department [<%= @department.name %>]</h2>
    <ol class="breadcrumb">
      <li>
        Users and Accounts
      </li>
      <li>
        <%= link_to 'Departments', departments_path %>
      </li>
      <li class="active">
        <strong><%= @department.name %></strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'Back', departments_path,  :class => "btn btn-default"%>
     
      <%= link_to 'Delete', @department, method: :delete, :class => "btn btn-danger", data: { title: 'Delete Department', confirm: 'Are you sure you want to delete this Department? This will affect all associated records which depend on this department.', commit: 'Yes
      delete!' } %>
     
    </div>
  </div>
</div>

<%= render 'department_view', department: @department %>