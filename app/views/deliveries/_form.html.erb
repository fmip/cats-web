                <div class="form-group">
                            <%= f.label :received_date %>
                <%= f.date_select :received_date, :class => 'form-control' %>
                        </div>
               

                <div class="form-group">
                            <%= f.label :status %>
                <%= f.number_field :status, :class => 'form-control' %>
                        </div>               

                <div class="form-group">
                            <%= f.label :operation_id %>
                <%= f.number_field :operation_id, :class => 'form-control' %>
                        </div>

      
      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
  <% end %>

    </div>
  </div>
</div>