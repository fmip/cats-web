<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-5">
    <h2>Commodity Categories</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Settings</a>
      </li>
      <li>
        <a href="#">Commodity</a>
      </li>
      <li class="active">
        <strong>Commodity Categories</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-7">
    <div class="title-action">
    <% if policy(CommodityCategory).new? %>
      <%= link_to 'New Commodity Category', new_commodity_category_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped cats-datatable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Code am</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @commodity_categories.each do |commodity_category| %>
          <tr>
            <td><%= commodity_category.name %></td>
            <td><%= commodity_category.code %></td>
            <td><%= commodity_category.code_am %></td>
            <td><%= commodity_category.description %></td>
            <td>
            <% if policy(CommodityCategory).edit? %>
              <%= link_to 'Edit', edit_commodity_category_path(commodity_category) %> &middot;
            <% end %>
            <% if policy(CommodityCategory).destroy? %>
              <%= link_to 'Delete', commodity_category, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
</div>
