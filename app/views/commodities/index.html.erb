<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Commodities</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Settings</a>
      </li>
      <li>
        <a href="#">Commodity</a>
      </li>
      <li class="active">
        <strong>Commodities</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
    <% if policy(Commodity).new? %>
      <%= link_to 'New Commodity', new_commodity_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="row">

  <div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
      <div class="ibox-content">

        <table class="table table-striped table-hover cats-datatable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Code</th>
              <th>Description</th>
              <th>Commodity category</th>
              <th>Unit of measure Category</th>
              <th>Actions</th>
          </tr>
        </thead>

          <tbody>
            <% @commodities.each do |commodity| %>
            <tr>
              <td>
                <% if policy(Commodity).edit? %>
                  <%= link_to commodity.name, edit_commodity_path(commodity) %>
                <% end%> 
                </td>
              <td><%= commodity.code%></td>
              <td><%= commodity.description%></td>
            <td>
              <% if commodity.commodity_category_id %>
                <%= commodity.commodity_category&.name%>
              <% end %>
            </td>
            <td>
              <%= commodity.uom_category ? commodity.uom_category.name : '-'%></td>
            <td>
            <% if policy(Commodity).edit? %>
              <%= link_to 'Edit', edit_commodity_path(commodity) %> &middot;
            <% end %>
            <% if policy(Commodity).destroy? %>
              <%= link_to 'Delete', commodity, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      </div>
    </div>
  </div>

</div>
