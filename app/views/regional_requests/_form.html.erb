<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <%= form_for(regional_request) do |f| %>
        <% if regional_request.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <%= pluralize(regional_request.errors.count, "error") %> prohibited this regional_request from being saved.
            </div>

            <div class="panel-body">
              <ul>
                <% regional_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

                <div class="form-group">
                            <%= f.label :reference_number %> <span class="required">*</span>
                <%= f.text_field :reference_number, :class => 'form-control', :required => true, :autofocus => true  %>
                        </div>


                <div class="form-group">
                  <%= f.label :region_id, "Region" %>
                  <span class="required">*</span>
                  <%= f.collection_select :region_id,
                            Location.where(location_type: "region"), :id, :name, {include_blank: '-- Choose --'}, {:class => 'form-control', :required => true }%>
                </div>

                <div class="form-group">
                  <%= f.label :operation_id, "Operation" %>
                  <span class="required">*</span>
                  <%= f.collection_select :operation_id,
                            Operation.order(:name), :id, :name, {include_blank: '-- Choose --'}, {:class => 'form-control', :required => true }%>
                </div>

                <div class="form-group">
                  <%= f.label :program_id, "Program" %>
                  <span class="required">*</span>
                  <%= f.collection_select :program_id,
                            Program.order(:name), :id, :name, {include_blank: '-- Choose --'}, {:class => 'form-control', :required => true }%>
                </div>


                <div class="form-group">
                            <%= f.label :requested_date %>
                <%= f.text_field :requested_date, :class => 'form-control datepicker' %>
                        </div>

                <div class="form-group">
                            <%= f.label :remark %>
                <%= f.text_area :remark, :class => 'form-control' %>
                        </div>

      
      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
  <% end %>

    </div>
  </div>
</div>
<script>
$(document).ready(function(){
  $('#regional_request_operation_id').select2();
})
</script>
