<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Ration Items</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Lookups</a>
      </li>
      <li class="active">
        <strong>Ration Items</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
    <% if policy(RationItem).new? %>
      <%= link_to 'New Ration Item', new_ration_item_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Amount</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @ration_items.each do |ration_item| %>
          <tr>
                        <td><%= ration_item.amount
              %></td>
                        <td>
              <% if policy(RationItem).edit? %>
                <%= link_to 'Edit', edit_ration_item_path(ration_item) %> &middot;
              <% end %>
              <% if policy(RationItem).destroy? %>
                <%= link_to 'Delete', ration_item, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
