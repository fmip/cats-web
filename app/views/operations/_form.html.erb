<div class="wrapper wrapper-content">
  <div>
    <%= form_for(operation,:html=> {:class => 'form-horizontal'})  do |f| %>
    <% if operation.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(operation.errors.count, "error") %>
        prohibited this operation from being saved.
      </div>

      <div class="panel-body">
        <ul>
          <% operation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <div>
      <div class="ibox">
        <div class="ibox-title">
          <h5>Basic information</h5>
        </div>

        <div class="ibox-content">

          <div class="form-group form-group-lg">
            <%= f.label :name, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :program_id, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <%= f.collection_select :program_id, Program.order(:name), :id, :name,{include_blank: 'Select Program'}, {:class => 'form-control'} %>
            </div>
          </div>

           <div class="form-group">
            <%= f.label :hrd_id, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <%= f.collection_select :hrd_id, Hrd.order(:year), :id, :name,{include_blank: 'Select HRD'}, {:class => 'form-control'} %>
            </div>
          </div>

           <div class="form-group">
            <%= f.label :ration_id, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <%= f.collection_select :ration_id, Ration.order(:description), :id, :description,{include_blank: 'Select Ration'}, {:class => 'form-control'} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :year, :class=>'col-sm-2 control-label' %>
            <div class="col-sm-4">
             
               <%= select_year(@operation.year.to_i, {prompt: 'Select year'}, {name: 'operation[year]' , :class => 'form-control' }) %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :month, :class=> 'col-sm-2 control-label' %>
            <div class="col-sm-4">
             <%= select_month(@operation.month, {prompt: 'Select month'}, {name: 'operation[month]',:class => 'form-control' }) %>

            </div>
          </div>

          <div class="form-group">
            <%= f.label :status, :class=> 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <%= f.collection_select :status, Operation.statuses, :second, :first,{include_blank: 'Select Status'}, {:class => 'form-control'} %>
            </div>
          </div>

        </div>

      </div>

      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>

    </div>

    <% end %>

  </div>

</div>
