<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <%= form_for @store_location do |f| %>
        <% if store_location.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <%= pluralize(store_location.errors.count, "error") %> prohibited this store_location from being saved.
            </div>

            <div class="panel-body">
              <ul>
                <% store_location.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

                <div class="form-group">
                            <%= f.label :name %>
                <%= f.text_field :name, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :description %>
                <%= f.text_field :description, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :location_id %>
                <%= f.number_field :location_id, :class => 'form-control' %>
                        </div>


      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
  <% end %>

    </div>
  </div>

  <div class="ibox float-e-margins">
    <div class="ibox-content">
  <div class="panel-body">
    <h5> Stores </h5>
    <div>
      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th>Temporary</th>
                        <th>Hub</th>
                        <th>Store owner</th>
                        <th>Store location</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @store_location.stores.each do |store| %>
          <tr>
                        <td><%= store.name
              %></td>
                        <td><%= store.temporary
              %></td>
                        <td><%= store.hub_id
              %></td>
                        <td><%= store.store_owner_id
              %></td>
                        <td><%= store.store_location_id
              %></td>
                        <td>
              <%= link_to 'Edit', edit_store_path(store) %> &middot;
              <%= link_to 'Delete', store_path, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-8">
      <div class="title-action">
        <%= link_to 'New Store', new_store_location_store_path(@store_location), :class => "btn btn-primary"%>
      </div>
    </div>
  </div>

</div>
</div>
</div>
