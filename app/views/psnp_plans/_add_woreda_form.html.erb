<%= form_tag  '',  :id => 'new_psnp_plan_item_form'  do  %>
 <div class="modal-body col-md-12 col-sm-12 col-xs-12">
    <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">          
          <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="form-group">
                <label for="woreda_id">Woreda</label>

                <%= select_tag  :woreda_id,  options_from_collection_for_select( @available_woredas, 'id', 'name' ) , { :prompt => "-- Choose --", :class => 'form-control psnp_plan-item-form-field' }  %>
            </div>
        </div>

    <input type="hidden" name="psnp_plan_id" value="<%= @psnp_plan.id %>" class="psnp_plan-item-form-field" />
    
    <input type="hidden" name="zone_id" value="<%= params[:zone_id] %>" class="psnp_plan-item-form-field" />
    <div class="col-md-6 col-sm-6 col-xs-6">
    <div class="form-group">
        <label for="starting_month">Starting Month</label>
        <%= select_tag 'starting_month',  options_for_select( Date::MONTHNAMES[1..-1].map.with_index { |e, i | [e, i + 1] }) , { :required => true, :prompt => "-- Choose --", :class => 'psnp_plan-item-form-field form-control' }  %>

        </div>
     </div>
    </div>



     <h3> <i class="glyphicon glyphicon-plus-sign-alt"></i> Public Work </h3>
     <hr>
        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">          
          <div class="col-md-6 col-sm-6 col-xs-6">

            <div class="form-group">
                <label for="duration_public_work">Duration</label>
                <input name='duration_public_work' type="number" class="form-control psnp_plan-item-form-field" >
            </div>

            </div>

            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    <label for="cash_ratio_public_work">Month of cash</label>
                    <input name='cash_ratio_public_work' type="number" class="form-control psnp_plan-item-form-field" >
            </div>
            </div>
        </div>

        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">          
          <div class="col-md-6 col-sm-6 col-xs-6">
                     <div class="form-group">
                        <label for="beneficiary_public_work">No of Beneficiaries</label>
                        <input name='beneficiary_public_work'  type="number" class="form-control psnp_plan-item-form-field">
                    </div>
          </div>

           <div class="col-md-3 col-sm-3 col-xs-3">
                <div class="form-group">
                    <label for="kind_ratio_beneficiary_public_work">Month of Food</label>
                    <input name='kind_ratio_beneficiary_public_work' type="number" class="form-control psnp_plan-item-form-field" >
               </div>
          </div>


        </div>


       <h3> <span style='font-weight: bold;'> Public Direct Support</span> </h3>
         <hr>
        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">  
             <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="form-group">
                <label for="duration">Duration</label>
                <input name='duration' type="number" class="form-control psnp_plan-item-form-field" >
            </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    <label for="cash_ratio">Month of cash</label>
                    <input name='cash_ratio' type="number" class="form-control psnp_plan-item-form-field">
            </div>
           

             </div>

        </div>

        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">  
             <div class="col-md-6 col-sm-6 col-xs-6">
                     <div class="form-group">
                        <label for="beneficiary">No of Beneficiaries</label>
                        <input name='beneficiary'  type="number" class="form-control psnp_plan-item-form-field">
                    </div>
          </div>

           <div class="col-md-3 col-sm-3 col-xs-3">
                <div class="form-group">
                    <label for="kind_ratio">Month of Food</label>
                    <input name='kind_ratio' type="number" class="form-control psnp_plan-item-form-field">
               </div>
          </div>
             
        </div>
    </div>

<% end %>