<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Warehouses</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Lookups</a>
      </li>
      <li class="active">
        <strong>Warehouses</strong>
      </li>
    </ol>
  </div>
 <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'New Warehouse', hubs_path, :class => "btn btn-primary"%>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @warehouses.each do |warehouse| %>
          <tr>
                        <td><%= warehouse.name
              %></td>
                        <td><%= warehouse.description
              %></td>
                        <td><%= warehouse.location_id
              %></td>
                        <td>
              <%= link_to 'Edit', edit_warehouse_path(warehouse) %> &middot;
              <%= link_to 'Delete', warehouse, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
<%= link_to 'Back', hub_path(params[:hub_id]) %>
