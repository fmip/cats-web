
<div class="wrapper wrapper-content">


  <div class="ibox float-e-margins">

    <div class="ibox-content">

      <%= form_for(currency, :role => 'form') do |f| %>
        <% if currency.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <%= pluralize(currency.errors.count, "error") %> prohibited this currency from being saved.
            </div>

            <div class="panel-body">
              <ul>
                <% currency.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :symbol %>
          <%= f.text_field :symbol, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, :class => 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
