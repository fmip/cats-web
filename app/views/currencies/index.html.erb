<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Currencies</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Settings</a>
      </li>
       <li>
        <a href="#">General Settings</a>
      </li>
      <li class="active">
        <strong>Currencies</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
    <% if policy(Currency).new? %>
      <%= link_to 'New Currency', new_currency_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Symbol</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @currencies.each do |currency| %>
          <tr>
            <td><%= currency.symbol %></td>
            <td><%= currency.name %></td>
            <td><%= currency.description %></td>
            <td>
            <% if policy(Currency).edit? %>
              <%= link_to 'Edit', edit_currency_path(currency) %>
              &middot;
            <% end %>
            <% if policy(Currency).destroy? %>
              <%= link_to 'Delete', currency, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
