<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Manage permission for <em><%= @user.name %></em></h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">User</a>
      </li>
      <li class="active">
        <strong>Permissions</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'Cancel', "/users/#{@user.id}",  :class => "btn btn-default"%>
    </div>
  </div>


<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
<div>
  <input type="checkbox" id="selectAll" value="selectAll"> Select / Deselect All<br/><br/>
</div>

 <%= form_tag "/users/#{@user.id}/updatePermissions", method: :put do %>

         <table class="table table-bordered cats-datatable" id="tbl">
         <thead>
          <tr>
             <th></th>
             <th>Name</th>
          </tr>
         </thead>
        
          <tbody>
            <% @all_permissions.each do |permission| %>
              <tr>
                <td>
                  <%= check_box_tag "permissions[#{permission.id}]", 1 , @user.permissions.include?(permission)  %>
                </td>
                <td><%= permission.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

          <div class="actions">
          <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
          </div>
<%end%>
      


    </div>
  </div>
</div>


<script>
$('#selectAll').click(function() {
   if (this.checked) {
       $(':checkbox').each(function() {
           this.checked = true;                        
       });
   } else {
      $(':checkbox').each(function() {
           this.checked = false;                        
       });
   } 
});



$("#tbl").dataTable().fnDestroy();
var table = $('#tbl').DataTable();
table.destroy();
$("form").on('submit', function(e){
   var $form = $(this);
   // Iterate over all checkboxes in the table
   table.$('input[type="checkbox"]').each(function(){
      // If checkbox doesn't exist in DOM
      if(!$.contains(document, this)){
         // If checkbox is checked
         if(this.checked){
            // Create a hidden element 
            $form.append(
               $('<input>')
                  .attr('type', 'hidden')
                  .attr('name', this.name)
                  .val(this.value)
            );
         }
      } 
   });          
});
</script>