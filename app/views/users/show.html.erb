<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Manage user for <em><%= @user.name %></em></h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">User</a>
      </li>
      <li class="active">
        <strong>User profile</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'Cancel', users_path,  :class => "btn btn-default"%>
    </div>
  </div>

 <div class="col-sm-3">
   
    </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row m-b-lg m-t-lg">

<div class="col-md-12">
   <div>
      <% if @user.is_active %>
      <span class="btn  btn-success .btn-lg"> Active </span>
    <%else%>
      <span class="btn btn-warning .btn-lg"> Inacive </span>
    <%end%>
      
      </div>
      </br>
</div>
    <div class="col-md-4">

      <div class="">

     
        <div>
          
          User type: <%=   %> </br>
          Registered since:  <%= time_ago_in_words(@user.created_at) %>
          <p> Last Login:    <%= time_ago_in_words(@user.last_sign_in_at) %> </p>
          
        </div>
      </div>

      </div>

      <div class="col-md-4">

      <div class="">
        <div>
           Keyboard:   <%= @keyboard %> </br>
           Unit of measurement:   <%= @default_uom %> </br>
           Region:     <%= @user.location.name  %> </br>
           Department: <%= Department.find_by(id: @user.department_id).name %>
        </div>
      </div>

      </div>

      <div class="col-md-4">

      <div class="">
        <div>
          Language: <%= @language %> </br>
          Calendor: <%= @calendor %> </br>
          Hub:      <%= @user.hub.name  %> </br>
          Mobile No: <%= @user.mobile_no%>
          
        </div>
      </div>

      </div>
  </div>
</div>







<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
   <div class="ibox-title">
          <h5>Department</h5>
          <div class="pull-right">
          <%= link_to 'Join / Leave Department',  {:controller => "users", :action => "user_departments", :user_id => @user.id }, :class => "btn btn-success btn-sm" %>
   </div>
   </div>

    <div class="ibox-content">

 

  
        <table class="table table-bordered">
          <tbody>
            <% @all_departments.each do |department| %>
              <tr>
               
                <td><%= department.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>


<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">

   <div class="ibox-title">
          <h5>Permission</h5>
   
   <div class="pull-right">
     <%= link_to 'Grant / Revoke Permission',  {:controller => "users", :action => "user_permissions", :user_id => @user.id }, :class => "btn btn-success btn-sm" %>
   </div>
   </div>
    <div class="ibox-content">

    

  

     


        <table class="table table-bordered">
          <tbody>
            <% @all_permissions.each do |permission| %>
              <tr>
                <td>
                 
                  <%= permission.name %>
                </td>
               
              </tr>
            <% end %>
          </tbody>
        </table>

       

     


    </div>
  </div>
</div>