<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Requisitions</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Lookups</a>
      </li>
      <li class="active">
        <strong>Requisitions</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'New Requisition', new_requisition_path, :class => "btn btn-primary"%>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Requisition no</th>
                        <th>Operation</th>
                        <th>Commodity</th>
                        <th>Region</th>
                        <th>Zone</th>
                        <th>Ration</th>
                        <th>Requested by</th>
                        <th>Requested on</th>
                        <th>Status</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @requisitions.each do |requisition| %>
          <tr>
                        <td><%= requisition.requisition_no
              %></td>
                        <td><%= requisition.operation_id
              %></td>
                        <td><%= requisition.commodity_id
              %></td>
                        <td><%= requisition.region_id
              %></td>
                        <td><%= requisition.zone_id
              %></td>
                        <td><%= requisition.ration_id
              %></td>
                        <td><%= requisition.requested_by
              %></td>
                        <td><%= requisition.requested_on
              %></td>
                        <td><%= requisition.status
              %></td>
                        <td>
              <%= link_to 'Edit', edit_requisition_path(requisition) %> &middot;
              <%= link_to 'Delete', requisition, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
