<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Edit Requisition</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Requisition</a>
      </li>
      <li class="active">
        <strong>Edit</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'Cancel', requisitions_path,  :class => "btn btn-default"%>
      <%= link_to '/requisitions/print?format=pdf&id=' + @requisition.id.to_s,  :class => "btn btn-default"  do %>
        <i class="fa fa-print"></i> 
        Print
      <% end %>

       <%= link_to '/requisitions/print_rrd?format=pdf&id=' + @requisition.id.to_s,  :class => "btn btn-default"  do %>
        <i class="fa fa-print"></i> 
        Print Invoice
      <% end %>
<%if policy(Requisition).contingency? %>
      <% if @contingency.to_f < 1 %>
       <%= link_to '/requisitions/contingency/' + @requisition.id.to_s + "?type=generate", method: :post, :class => "btn btn-default"  do %>
        <i class="glyphicon glyphicon-plus-sign"></i> 
        Contingency
      <% end %>
    <% else %>
      
       <%= link_to '/requisitions/contingency/' + @requisition.id.to_s + "?type=cancel",method: :post,  :class => "btn btn-default"  do %>
        <i class="glyphicon glyphicon-minus-sign"></i> 
        Remove contingency
      <% end %>
    <% end %>
<% end %>
    </div>
  </div>
</div>

<%= render 'form', requisition: @requisition %>

