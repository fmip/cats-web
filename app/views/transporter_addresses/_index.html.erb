<div class="ibox-title">
  <h5>Address and Contact Information
  </h5>
  <div class="ibox-tools">
    <%= link_to new_transporter_transporter_address_path(@transporter), class: "btn btn-xs" do %>
    <i class="fa fa-plus-square"></i>
    Address
    <% end %>
    <a class="collapse-link">
      <i class="fa fa-chevron-up"></i>
    </a>
  </div>
</div>
<div class="ibox-content">

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Region</th>
        <th>City</th>
        <th>Zone/Subcity</th>
        <th>Woreda</th>
        <th>Kebele</th>
        <th>House#</th>
        <th>Phone</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <!-- <% if !@addresses.nil? %> -->
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.region_id %></td>
        <td><%= address.city %></td>
        <td><%= address.subcity %></td>
        <td><%= address.woreda %></td>
        <td><%= address.kebele %></td>
        <td><%= address.house_no %></td>
        <td><%= address.phone %></td>
        <td><%= address.email %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
