<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Framework Tenders</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Lookups</a>
      </li>
      <li class="active">
        <strong>Framework Tenders</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to 'New Framework Tender', new_framework_tender_path, :class => "btn btn-primary"%>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Year</th>
                        <th>Half year</th>
                        <th>Starting month</th>
                        <th>Ending month</th>
                        <th>Status</th>
                        <th>Remark</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @framework_tenders.each do |framework_tender| %>
          <tr>
                        <td><%= framework_tender.year
              %></td>
                        <td><%= framework_tender.half_year
              %></td>
                        <td><%= framework_tender.starting_month
              %></td>
                        <td><%= framework_tender.ending_month
              %></td>
                        <td><%= framework_tender.status
              %></td>
                        <td><%= framework_tender.remark
              %></td>
                        <td>
              <%= link_to 'Edit', edit_framework_tender_path(framework_tender) %> &middot;
              <%= link_to 'Delete', framework_tender, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
