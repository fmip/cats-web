<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Projects</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Plan</a>
      </li>
      <li class="active">
        <strong>Projects</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <% if policy(Project).new? %>
      <% link_to 'New Project', new_project_path, :class => "btn btn-primary"%>
      <div class="btn-group">
        <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle" aria-expanded="false">New Project <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <% CommoditySource.all.each do |source| %>
           
            <li><%= link_to "#{source.name}", new_project_path(source: source.id) %></li>
          <% end %>        
        </ul>
       <div></div></div>
      <%end%>
    </div>
  </div>
</div>

<div class="row">
  <div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <table class="table table-striped cats-datatable">
          <thead>
            <tr>
              <th>Project code</th>
              <th>Commodity</th>
              <th>Commodity source</th>
              <th>Organization</th>
              <th>Amount</th>
              <th>Unit of measure</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>

          <%
            can_delete_project = policy(Project).new?
            can_edit_project = policy(Project).edit?
          %>

          <tbody>
            <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.project_code, edit_project_path(project) %></td>
              <td><%= project.commodity.name %></td>
              <td><%= project.commodity_source.name %></td>
              <td><%= project.organization.name %></td>
              <td class="text-right"><%= project.amount%></td>
              <td><%= project.unit_of_measure.name %></td>
              <td><%= project&.publish_date&.strftime('%d-%b-%Y')%></td>
              <td>
                <% if can_edit_project %>
                <%= link_to 'Edit', edit_project_path(project) %>
                &middot;
                <%end%>
                <% if can_delete_project %>
                <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
                <%end%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
