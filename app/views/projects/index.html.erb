<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Projects</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Plan</a>
      </li>
      <li class="active">
        <strong>Projects</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <% if policy(Project).new? %>
      <%= link_to 'New Project', new_project_path, :class => "btn btn-primary"%>
      <%end%>
    </div>
  </div>
</div>

<div class="row">
  <div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <table class="table table-striped cats-datatable">
          <thead>
            <tr>
              <th>Project code</th>
              <th>Commodity</th>
              <th>Commodity source</th>
              <th>Organization</th>
              <th>Amount</th>
              <th>Unit of measure</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.project_code, edit_project_path(project) %></td>
              <td><%= Commodity.find(project.commodity_id).name%></td>
             
              <td><%= Organization.find(project.organization_id).name%></td>
              <td class="text-right"><%= project.amount%></td>
              <td><%= UnitOfMeasure.find(project.unit_of_measure_id).name%></td>
              <td><%= project&.publish_date&.strftime('%d-%b-%Y')%></td>
              <td>
              <% if policy(project).edit? %>
                <%= link_to 'Edit', edit_project_path(project) %>
                &middot;
                <%end%>
                <% if policy(Project).new? %>
                <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
                <%end%>

                  <% if !project.archived  %>
                    <%= link_to "projects/#{project.id}/archive"  , method: :post, :class => "btn btn-white btn-sm", :data=> { :confirm => "Are you sure?" }  do %>
                            <i class="fa fa-archive"></i>   
                        Archive     
                    <% end %>
                  <% end %>

              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
