<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Organizations</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Settings</a>
      </li>
       <li>
        <a href="#">General Settings</a>
      </li>
      <li class="active">
        <strong>Organizations</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
    <% if policy(Organization).new? %>
      <%= link_to 'New Organization', new_organization_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th>Long name</th>
                        <th>Description</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @organizations.each do |organization| %>
          <tr>
                        <td><%= organization.name
              %></td>
                        <td><%= organization.long_name
              %></td>
                        <td><%= organization.description
              %></td>
                        <td>
              <% if policy(Organization).edit? %>
                <%= link_to 'Edit', edit_organization_path(organization) %> &middot;
              <% end %>
              <% if policy(Organization).destroy? %>
                <%= link_to 'Delete', organization, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
  <div>
</div>
