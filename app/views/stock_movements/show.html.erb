  </div><!-- /.modal -->


  <script>
$(document).ready(function(){

   $("#qunaity-limit").hide();
    $(document).on('hidden.bs.modal', '#new-receipt-modal', function (e) {
        $(".modal-body input").val("")
        $(".modal-body select").val("")
        $("#qunaity-limit").hide();
    });

        $(document).on('show.bs.modal', '#new-receipt-modal', function (e) {
          $(".form-group #balance").text("Available stock: " + <%= @dispached_stock %> - <%= @received_stock %>);

          $("#quantity").on('change keydown keypress keyup mousedown click mouseup', function(){
              var stock_available = "<%= @dispached_stock %>  - <%= @received_stock %>"
              
              if ($("#quantity").val() > stock_available){
                var flag = validate_quantity(<%= @stock_movement&.source_hub_id %>, <%= @stock_movement&.project_id %>, $("#quantity").val() , $('select[name=unit]').val())
                if (!flag){
                  $("#qunaity-limit").removeClass("label label-primary");
                  $("#qunaity-limit").addClass("label label-danger");
                  $("#qunaity-limit").html("");
                  $("#qunaity-limit").html("More than available stock! " + stock_available);
                  $("#qunaity-limit").show();
                }
                else{
                   $("#qunaity-limit").hide();
                }
              }
          });
    });

 
});
 
  function validate_quantity(hub, project, quantity, unit)
  {
    
    if( hub!="" && project!="" && quantity!="" && unit!="")
    {
      
      $.ajax({
		        url:'/stock_movements/validate_quantity',
		        type:'GET',
		        dataType:'json',
		        data:{
		        	stock_movement: {
                          source_hub_id: hub,
                          proj_id: project,
                          quantity: quantity,
                          unit_of_measure_id: unit
		        	}	            
		        },
		        before: function() {
		        
		        },
		        success:function(data){
		        		console.log(data);	
                return data;                         
		        },
		        error:function(data){
		            console.log(data);
		        }
		    });
    }
  }

$(document).on("click", ".new-receipt-modal",function(){
  var receieved_id = $(this).data('id');

   $.ajax( { url: '/stock_movements/stock_movement_edit/' + receieved_id,cache: false, method: 'GET'})
             .done( function(data) {
            
                $(".form-group #grn_no").val(data.grn_no);
                $(".form-group #plate_no").val(data.plate_no);
                $(".form-group #trailer_plate_no").val(data.trailer_plate_no);
                $(".form-group #received_date").val(data.receipt_date);
                $(".form-group #quantity").val(data.quantity);
                $('select[name=store]').val(data.store);
                $(".form-group #store_keeper").val(data.store_keeper);
                document.getElementById('edit_mode').value = "true"
                document.getElementById('receipt_id').value = data.receipt_id
                $('select[name=transporter_id]').val(data.transporter_id)
                $('select[name=unit]').val(data.unit)
                
             });

 
});
</script>
