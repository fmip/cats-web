                    <%= select("unit", "unit_id", UnitOfMeasure.where(uom_category_id: @uom_category_id).collect{|t| [t.name, t.id ]}, {prompt: '-- Choose --'}, {:style => "width: 100%", :class => 'form-control input-small', :required => true, :name => 'unit' }) %>
