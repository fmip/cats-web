<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <%= form_for(journal) do |f| %>
        <% if journal.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <%= pluralize(journal.errors.count, "error") %> prohibited this journal from being saved.
            </div>

            <div class="panel-body">
              <ul>
                <% journal.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

      
          <div class="form-group">
            
                <%= f.label :name %>
                <%= f.text_field :name, :class => 'form-control' %>
            
            </div>

      
          <div class="form-group">
            
                <%= f.label :description %>
                <%= f.text_field :description, :class => 'form-control' %>
            
            </div>

      
          <div class="form-group">
            
                <%= f.label :code %>
                <%= f.collection_select :code, Journal.codes, :first, :first, {:include_blank => '-- Select --'},{:class => 'form-control'} %>
            
            </div>

      

      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
  <% end %>

    </div>
  </div>
</div>